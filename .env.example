# Server configuration
NODE_ENV=development
PORT=3500

# Database (Prisma - SQLite for local, PostgreSQL for production)
DATABASE_URL="file:./dev.db"

# YouTube Data API v3 (required for competition analysis)
YOUTUBE_API_KEY=your_youtube_api_key_here

# Google Trends configuration
GOOGLE_TRENDS_DEFAULT_GEO=US

# Google AdSense API (optional - for profitability analysis)
ADSENSE_API_KEY=your_adsense_api_key_here
AD_CLIENT_ID=ca-pub-xxxxxxxxxxxxxxxxxx

# JWT Authentication (REQUIRED - change in production!)
JWT_SECRET=your-super-secret-jwt-key-must-be-at-least-32-characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# API rate limits (requests per minute)
YOUTUBE_RATE_LIMIT=60
GOOGLE_TRENDS_RATE_LIMIT=30
